    "react-dom": "^18.2.0",
    "react-helmet": "^6.1.0",
    "react-helmet-async": "^1.3.0",
    "react-i18next": "^15.6.0",
    "react-router-dom": "^6.20.1",
    "three": "^0.178.0"
  },
  "devDependencies": {
    "@types/node": "^24.0.10",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.2.15",
    "@types/react-helmet": "^6.1.11",
    "@types/three": "^0.178.0",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
